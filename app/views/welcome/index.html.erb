<div class="column-list scroll-column col-xs-12 col-sm-3 col-md-3 col-lg-3">
  <% @cities.each do |city| %>
    <a href="/search?city=<%= city.id %>" style="line-height:62px;">
      <div class="city-preview">
        <div class="card attraction-preview">
          <div style="background-image: url(<%= city[:picture] %>);" class="city-image">
          </div>
        <div class="card-block">
          <h4 class="card-title"><%= city[:name] %>, <%= city[:country] %></h4>
        </div>
      </div>
    </div>
  </a>
<% end %>
</div>

<div class="main-map col-xs-12 col-sm-12 col-md-9 col-lg-9" id="map"></div>
